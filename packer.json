{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "ap-northeast-1",
    "source_ami": "ami-a21529cc",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-ubuntu-trusty-kernel-3.19-{{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo apt-get update",
      "sudo apt-get install linux-image-3.19.0-58-generic linux-headers-3.19.0-58 -y",
      "#sudo apt-get -y --force-yes install linux-generic-lts-vivid"
    ]
  }]
}
