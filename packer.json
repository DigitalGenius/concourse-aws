{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-west-2",
    "source_ami": "ami-8e0584ee",
    "instance_type": "r4.large",
    "ebs_optimized": true,
    "enhanced_networking": true,
    "ssh_username": "ubuntu",
    "ami_name": "packer-ubuntu-xenial-{{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo apt-get update",
      "sudo apt-get upgrade -y",
      "sudo apt-get install htop jq python-pip ntp linux-image-extra-$(uname -r) -y",
      "pip install awscli",
      "sudo add-apt-repository ppa:git-core/ppa -y",
      "sudo apt-get update",
      "sudo apt-get install git -y"
    ]
  }]
}
