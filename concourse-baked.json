{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "r4.large",
    "ebs_optimized": true,
    "enhanced_networking": true,
    "ssh_username": "ubuntu",
    "ami_name": "packer-concourse-v2.6.0-{{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "curl -L https://github.com/concourse/concourse/releases/download/v2.6.0/concourse_linux_amd64 -o concourse",
      "chmod +x concourse",
      "sudo mv concourse /usr/local/bin/concourse"
    ]
  }]
}
